{
  "name": "facebook-lite-backend",
  "version": "2.0.0",
  "description": "Modern, secure backend for Facebook Lite application",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm install",
    "client": "npm start --prefix ../frontend",
    "fullstack": "concurrently \"npm run dev\" \"npm run client\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "security-check": "npm audit",
    "logs:clean": "node -e \"require('./utils/logger').cleanup()\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ashwani2529/Facebook-Lite.git"
  },
  "keywords": [
    "facebook-lite",
    "social-media",
    "nodejs",
    "express",
    "mongodb",
    "jwt",
    "api"
  ],
  "author": "Facebook Lite Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Ashwani2529/Facebook-Lite/issues"
  },
  "homepage": "http://localhost:3000",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.7.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "socket.io": "^4.8.1",
    "validator": "^13.11.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "eslint": "^8.48.0",
    "jest": "^29.6.4",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!logs/**"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error",
      "prefer-const": "error"
    }
  }
}
